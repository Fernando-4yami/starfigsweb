{
  "compilerOptions": {
    "target": "esnext",                      // ğŸ‘ Bien para funciones modernas
    "module": "esnext",                      // ğŸ‘ Bien, aunque puedes usar "commonjs" para scripts Node
    "lib": ["dom", "esnext"],                // ğŸ‘ Correcto para apps web y scripts
    "allowJs": true,                         // ğŸ‘ Si tienes scripts JS mezclados
    "jsx": "preserve",                       // ğŸ‘ Next.js
    "moduleResolution": "node",              // âœ… Necesario para imports
    "resolveJsonModule": true,               // âœ… Necesario para `require('./serviceAccountKey.json')`
    "isolatedModules": true,                 // âš ï¸ Bien, pero requiere que todos los archivos sean mÃ³dulos
    "esModuleInterop": true,                 // âœ… Necesario para importar mÃ³dulos CommonJS (como Firebase Admin)
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "strict": false,                         // ğŸ” Considera activarlo en el futuro
    "noEmit": true,
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true                 // âœ… Bien
  },
  "include": [
    "src",
    ".next/types/**/*.ts",
    "scripts/generateSlugs.js",
    "scripts/migrateReleaseDate.ts"
  ],
  "exclude": ["node_modules"]
}
